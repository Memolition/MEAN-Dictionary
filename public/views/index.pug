doctype html
html(lang="en", ng-app="dictionary")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")

        title MEAN Dictionary

        link(href="scripts/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
        link(href="res/css/main_layout.css" rel="stylesheet")
    body(ng-controller="main_controller")
        nav(class="navbar navbar-inverse navbar-fixed-top")
            div(class="container")
                div(class="navbar-header")
                    button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                        span(class="sr-only") Toggle navigation
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    a(class="navbar-brand" href="#") Project name
                div(id="navbar", class="collapse navbar-collapse")
                    ul(class="nav navbar-nav")
                        li(class="active")
                            a(href="#") Home
        div(id="main_wrapper", class="container") {{greeting}}

        script(src="res/js/jquery.min.js")
        script(src="scripts/angular/angular.min.js")
        script(src="scripts/angular-route/angular-route.min.js")
        script(src="res/js/app.js")
        script(src="res/js/controllers.js")

        script(src="scripts/bootstrap/dist/js/bootstrap.min.js")